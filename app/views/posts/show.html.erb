<div class="demo-card-wide mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title">
    <h4 class="mdl-card__title-text"><%= @post.title %></h4>
  </div>
  <div class="mdl-card__supporting-text">
    <%= @post.content %><br/><br/>
    <small class="author-on-show">Created by: <%= @post.user.email %></small>
  </div>
  <% if user_signed_in? && current_user == @post.user %>
    <div class="mdl-card__actions mdl-card--border">
      <button><%= link_to "Edit Post", edit_post_path(@post.id), class: "mdl-button mdl-js-button mdl-button--raised" %></button>
      <button><%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class: "mdl-button mdl-js-button mdl-button--raised" %></button>
    </div>
  <% end %>
  <!-- this form isn't working for some reason. -->
  <%= form_for [ @post, @comment ] do |f| %>
    <% if @comment.errors.any? %>
      <%= pluralize(@comment.errors.count, "error") %>
        prevented this comment from being posted:
        <% @comment.errors.full_messages.each do |msg| %>
          <%= msg %>
       <% end %>
     <% end %>
    <div class="form-comment">
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :content, "New Comment", class: "mdl-textfield__label", for: "sample1" %><br/>
        <%= f.text_area :content, class: "mdl-textfield__input", placeholder: "Comment Here", type: "text", id: "sample1" %>
      </div>

      <div class="submit-comment">
        <button><%= f.submit class: "mdl-button mdl-js-button mdl-button--raised" %></button>
      </div>
    </div>
  <% end %>
</div>
