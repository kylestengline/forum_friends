<div class="form_for_sign_in">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :email, class: "mdl-textfield__label", for: "sample1" %><br />
      <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input", type: "text", id: "sample1" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :password, class: "mdl-textfield__label", for: "sample2" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input", type: "text", id: "sample2" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="mdl-textfield mdl-js-textfield" style="text-align: center;">
        <%= f.check_box :remember_me, class: "mdl-checkbox__input" %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Sign In", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
    </div>
  <% end %>
</div>

